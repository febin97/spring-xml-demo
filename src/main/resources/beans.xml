<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="actor" class="com.stackroute.domain.Actor">
        <constructor-arg name="actorName" value="SRK"/>
        <constructor-arg name="actorGender" value="Male"/>
        <constructor-arg name="actorAge" value="52"/>
    </bean>
    <bean id="movieBean" class="com.stackroute.domain.Movie" autowire="byName">
    </bean>
    <bean id="actorBean" class="com.stackroute.domain.Actor">
        <constructor-arg name="actorName" value="Lalettan"/>
        <constructor-arg name="actorGender" value="Male"/>
        <constructor-arg name="actorAge" value="56"/>
    </bean>
    <bean id="movieBean2" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actorBean"/>
    </bean>

    <bean id="LifeCycleBean" class="com.stackroute.demo.BeanLifecycleDemoBean" init-method="customInit" destroy-method="customDestroy">
    </bean>

</beans>