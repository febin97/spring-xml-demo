<?xml version="1.0" encoding="UTF-8" ?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="actorBean1" class="com.stackroute.domain.Actor">
        <constructor-arg name="actorName" value="SRK"/>
        <constructor-arg name="actorGender" value="Male"/>
        <constructor-arg name="actorAge" value="52"/>
    </bean>
    <bean id="actorBean2" class="com.stackroute.domain.Actor">
        <constructor-arg index="0" value="Lalettan" />
        <constructor-arg index="1" value="Male" />
        <constructor-arg index="2" value="56"/>
    </bean>
    <bean id="actorBean3" class="com.stackroute.domain.Actor">
        <constructor-arg type="java.lang.String" index="0" value="Mammootty"/>
        <constructor-arg index="1" value="Male"/>
        <constructor-arg name="actorAge" value="65"/>
    </bean>
    <bean name="movieBean, movieBean2" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actorBean3"/>
    </bean>

</beans>